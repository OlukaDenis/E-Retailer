<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_id"
                android:gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="84673873"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|start"
                    android:text="Rider"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transporter:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_transporter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|start"
                    android:text="Rider"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical|start"
                android:text="received status"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_phone"
                android:gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="28dp"
                android:layout_height="wrap_content"
                android:text="+256773047940"/>

            <TextView
                android:id="@+id/order_address"
                android:gravity="center_vertical|start"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="28dp"
                android:layout_height="wrap_content"
                android:text="Kampala"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:gravity="center_vertical|start"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="28dp"
                    android:layout_height="wrap_content"
                    android:text="Total Amount: "/>
                <TextView
                    android:id="@+id/order_total"
                    android:gravity="center_vertical|start"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="28dp"
                    android:layout_height="wrap_content"
                    android:text="1000"/>
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/img_edit_order"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_alignParentTop="true"
                android:tint="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_delete_order"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_remove"
                android:layout_alignParentBottom="true"
                android:tint="@color/colorPrimary"/>

        </RelativeLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>