<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/add_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name*"
            android:inputType="textCapWords"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp"
            app:met_floatingLabelTextSize="14dp"
            app:met_iconPadding="0dp"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="50"
            app:met_primaryColor="@color/colorAccent"
            app:met_singleLineEllipsis="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/select_category_image"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_camera"
                android:tint="@color/colorPrimary"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight="8"
                android:id="@+id/upload_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="UPLOAD PHOTO"
                app:fb_defaultColor="@color/colorPrimaryDark"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_fontIconSize="20dp"
                app:fb_iconPaddingRight="18dp"
                app:fb_iconPosition="left"
                app:fb_textColor="#FFFFFF"
                app:fb_textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>